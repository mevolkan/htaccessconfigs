# Example of directives that may not work on your .htaccess

Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# Security Headers – X-Content-Type: nosniff
Header set X-Content-Type-Options nosniff

# Security Headers – X-XSS-Protection
Header set X-XSS-Protection "1; mode=block"

Header set Referrer-Policy "no-referrer-when-downgrade"
# CSP
Header set Content-Security-Policy "default-src 'self' https://cic.co.ke/;script-src 'self' 'unsafe-inline' data: https://www.google.com/jsapi https://code.jquery.com https://www.gstatic.com; script-src-elem 'self' 'unsafe-inline' data: https://www.google.com/jsapi https://code.jquery.com https://www.gstatic.com; script-src-attr 'self' data: https://www.google.com/jsapi https://code.jquery.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' data: https://code.jquery.com https://fonts.googleapis.com; style-src-elem 'self' 'unsafe-inline' data: https://code.jquery.com https://fonts.googleapis.com; style-src-attr 'self' 'unsafe-inline' data: https://code.jquery.com https://fonts.googleapis.com; font-src * 'self' 'unsafe-inline' data: https://fonts.googleapis.com https://fonts.gstatic.com;report-uri https://a2edf080070d86cb5e57671007330586.report-uri.com/r/d/csp/enforce;object-src 'none';base-uri 'self';connect-src 'self';frame-src 'self';img-src 'self' data: https://a.tile.openstreetmap.org https://b.tile.openstreetmap.org https://c.tile.openstreetmap.org; manifest-src 'self'; media-src 'self'; worker-src 'none';"
